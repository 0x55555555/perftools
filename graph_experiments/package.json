  },
  "author": "jorjpimm@gmail.com",
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "bower": "^1.7.2",
    "express": "^4.13.3",
    "gulp": "^3.9.0",
    "gulp-bower-files": "0.2.7",
    "gulp-concat": "^2.6.0",
    "gulp-jade": "^1.1.0",
    "gulp-livereload": "^3.8.1",
    "gulp-sass": "^2.1.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-util": "^3.0.7",
    "livereload": "^0.4.0",
    "path": "^0.12.7",
    "tiny-lr": "^0.2.1"
  },
  "eslintConfig": {
    "rules": {
      "no-undef": 2,
      "no-var": 2,
      "no-shadow": 2,
      "no-shadow-restricted-names": 2,
      "no-unused-vars": [2, {
        "vars": "local",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }],
      "no-use-before-define": [2, "nofunc"],
      "comma-dangle": [1, "always-multiline"],
      "no-cond-assign": [2, "always"],
      "no-console": 1,
      "no-debugger": 1,
      "no-alert": 1,
      "no-constant-condition": 1,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-empty": 2,
      "no-ex-assign": 2,
      "no-extra-boolean-cast": 0,
      "no-extra-semi": 2,
      "no-func-assign": 2,
      "no-inner-declarations": 2,
      "no-invalid-regexp": 2,
      "no-irregular-whitespace": 2,
      "no-obj-calls": 2,
      "quote-props": [2, "consistent-as-needed"],
      "no-sparse-arrays": 2,
      "no-unreachable": 2,
      "use-isnan": 2,
      "block-scoped-var": 0
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "globals": {
        "d3": true,
        "angular": true,
        "app": true,
        "$": true
    }
  }
}
